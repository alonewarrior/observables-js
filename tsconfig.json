{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "inlineSourceMap": true,
        "inlineSources": true,
        "outFile": "dist/index",
        "declaration": true,
        "esModuleInterop": true,
        "types": [
            "mocha",
            "chai",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}

